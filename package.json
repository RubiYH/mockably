{
  "name": "mockably-poc",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "dev": "yarn workspaces foreach -A run dev",
    "build": "yarn workspaces foreach -A run build",
    "lint": "yarn workspaces foreach -A run lint",
    "test": "yarn workspaces foreach -A run test",
    "clean": "yarn workspaces foreach -A run clean && rm -rf node_modules",
    "dev:todo": "yarn workspace @mockably/todo-app run dev",
    "build:todo": "yarn workspace @mockably/todo-app run build",
    "dev:core": "yarn workspace mockably run dev",
    "build:core": "yarn workspace mockably run build"
  },
  "devDependencies": {
    "typescript": "~5.9.2"
  },
  "engines": {
    "npm": "PLEASE_USE_YARN",
    "node": ">=18.0.0",
    "yarn": ">=1.22.0"
  },
  "author": "RubiYH <contact@yoonho.dev>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rubiyh/mockably.git"
  }
}
